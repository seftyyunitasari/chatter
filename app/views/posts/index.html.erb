<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

<h3>Posts</h3>

<%= notice %>
<%= link_to 'create a new post', new_post_path, id: 'link_to' %>

<br/><br/>

<% @posts.each do |post| %>
  <table>
  <tr>
    <td rowspan="3" id="img_col"></td>
    <td colspan="3" id="time"><%= post.created_at %></td>
  </tr>
  <tr>
    <td colspan="3" id="content"><%= post.content %></td>
  </tr>
  <tr id="post_navs">
    <td><%= link_to 'show detail', post_path(post.id) %></td>
    <td><%= link_to 'edit', edit_post_path(post.id) %></td>
    <td><%= link_to 'delete', post_path(post.id), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %></td>
  </tr>
</table>

<% end %>
